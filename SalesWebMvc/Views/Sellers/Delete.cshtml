<!--Aqui define o tipo de Model que deve receber, como estamos deletando um vendedor, é passado o seller-->
@model SalesWebMvc.Models.Seller

@{
    ViewData["Title"] = "Delete";
}

<h2>@ViewData["Title"]</h2>

<h3>Tem certeza que quer deletar este vendedor?</h3>
<div>
    <h4>Seller</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <!--Mostrar o nome do campo-->
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            <!--Mostrar valor do campo-->
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.BaseSalary)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BaseSalary)
        </dd>
    </dl>
    <!--Botão para confirmar a exclusão-->
    <form asp-action="Delete">
        <!--tipo hidden é um tipo oculto que está passando o ID para ser removido-->
        <input type="hidden" asp-for="Id" /> 
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Voltar a lista</a>
    </form>

</div>
